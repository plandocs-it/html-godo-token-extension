{
  "name": "html-godo-comment-semantic",
  "displayName": "HTML Godo Comment Semantic Highlight",
  "description": "Highlights <!--{ ... }--> comments using semantic tokens.",
  "version": "0.1.0",
  "publisher": "노영빈",
  "icon": "icon_circle.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "semanticTokenTypes": [
      {
        "id": "godoComment",
        "superType": "comment",
        "description": "godo HTML comment like <!--{ ... }-->"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "typescript": "^4.0.0",
    "@types/vscode": "^1.70.0",
    "tslint": "^6.1.3",
    "vscode": "^1.1.37"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/html-special-comment-semantic"
  }
}
